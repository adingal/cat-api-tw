{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "atoms/*": ["./src/atoms/*"],
      "context/*": ["./src/context/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
